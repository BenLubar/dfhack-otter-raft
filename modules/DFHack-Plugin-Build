module DFHack-Plugin-Build<$BuildType, $GitHubBuildContext, $PluginName = $ApplicationName, $ArtifactSuffix = "">
{
    GitHub-Set-Status
    (
        Credentials: GitHub-DFHack,
        Organization: $PluginOwner,
        Repository: $PluginName,
        AdditionalContext: $GitHubBuildContext,
        CommitHash: $PluginCommit,
        Description: "#$ExecutionId building...",
        Status: pending
    );

    # Windows
    {
        # Windows (32)
        with async = PluginBuild
        {
            call DFHack-Plugin-Shared
            (
                OperatingSystem: Windows,
                Bits: 32,
                PluginName: $PluginName,
                ImageTag: msvc,
                BuildType: $BuildType,
                ArtifactSuffix: $ArtifactSuffix
            );
        }

        # Windows (64)
        with async = PluginBuild
        {
            call DFHack-Plugin-Shared
            (
                OperatingSystem: Windows,
                Bits: 64,
                PluginName: $PluginName,
                ImageTag: msvc,
                BuildType: $BuildType,
                ArtifactSuffix: $ArtifactSuffix
            );
        }
    }

    # Linux
    {
        # GCC Latest
        {
            # Linux (32)
            with async = PluginBuild
            {
                call DFHack-Plugin-Shared
                (
                    OperatingSystem: Linux,
                    Bits: 32,
                    PluginName: $PluginName,
                    ImageTag: latest,
                    BuildType: $BuildType,
                    ArtifactSuffix: $ArtifactSuffix
                );
            }

            # Linux (64)
            with async = PluginBuild
            {
                call DFHack-Plugin-Shared
                (
                    OperatingSystem: Linux,
                    Bits: 64,
                    PluginName: $PluginName,
                    ImageTag: latest,
                    BuildType: $BuildType,
                    ArtifactSuffix: $ArtifactSuffix
                );
            }
        }

        # GCC 4.8
        {
            # Linux (gcc 4.8) (32)
            with async = PluginBuild
            {
                call DFHack-Plugin-Shared
                (
                    OperatingSystem: Linux,
                    Bits: 32,
                    PluginName: $PluginName,
                    ImageTag: gcc-4.8,
                    BuildType: $BuildType,
                    ArtifactSuffix: $ArtifactSuffix
                );
            }

            # Linux (gcc 4.8) (64)
            with async = PluginBuild
            {
                call DFHack-Plugin-Shared
                (
                    OperatingSystem: Linux,
                    Bits: 64,
                    PluginName: $PluginName,
                    ImageTag: gcc-4.8,
                    BuildType: $BuildType,
                    ArtifactSuffix: $ArtifactSuffix
                );
            }
        }
    }

    # OS X
    {
        # GCC Latest
        {
            # OS X (32)
            with async = PluginBuild
            {
                call DFHack-Plugin-Shared
                (
                    OperatingSystem: MacOSX,
                    Bits: 32,
                    PluginName: $PluginName,
                    ImageTag: latest,
                    BuildType: $BuildType,
                    ArtifactSuffix: $ArtifactSuffix
                );
            }

            # OS X (64)
            with async = PluginBuild
            {
                call DFHack-Plugin-Shared
                (
                    OperatingSystem: MacOSX,
                    Bits: 64,
                    PluginName: $PluginName,
                    ImageTag: latest,
                    BuildType: $BuildType,
                    ArtifactSuffix: $ArtifactSuffix
                );
            }
        }

        # GCC 4.8
        {
            # OS X (gcc 4.8) (32)
            with async = PluginBuild
            {
                call DFHack-Plugin-Shared
                (
                    OperatingSystem: MacOSX,
                    Bits: 32,
                    PluginName: $PluginName,
                    ImageTag: gcc-4.8,
                    BuildType: $BuildType,
                    ArtifactSuffix: $ArtifactSuffix
                );
            }

            # OS X (gcc 4.8) (64)
            with async = PluginBuild
            {
                call DFHack-Plugin-Shared
                (
                    OperatingSystem: MacOSX,
                    Bits: 64,
                    PluginName: $PluginName,
                    ImageTag: gcc-4.8,
                    BuildType: $BuildType,
                    ArtifactSuffix: $ArtifactSuffix
                );
            }
        }
    }

    if $PluginName == df-ai
    {
        # Assets
        with async = PluginBuild
        {
            Acquire-Server
            (
                Role: DFHack-Linux-Builders,
                Verbose: true,
                DoNotShare: true,
                ServerName => $LinuxBuilder
            );

            for server $LinuxBuilder
            {
                InedoCore::Exec
                (
                    FileName: /bin/bash,
                    Arguments: -c 'mkdir -p assets/df-ai-blueprints && cp -R src/plugins/df-ai/plans src/plugins/df-ai/rooms assets/df-ai-blueprints',
                    WorkingDirectory: $WorkingDirectory
                );

                Create-Artifact df-ai-assets
                (
                    From: $WorkingDirectory/assets,
                    Verbose: true,
                    Overwrite: true
                );
            }

            Release-Server $LinuxBuilder
            (
                Role: DFHack-Linux-Builders,
                Verbose: true
            );
        }
    }

    await PluginBuild;
}
